{
    "$schema": "../../umbraco-package-schema.json",
    "name": "Umbraco.Community.UmbNavSorter",
    "version": "4.0.0",
    "extensions": [
        {
            "type": "propertyEditorUi",
            "alias": "Umbraco.Community.UmbNavSorter",
            "name": "UmbNav (Sorter)",
            "element": "/App_Plugins/UmbNavSorter/dist/client.js",
            "elementName": "umbnav-sorter-property-editor-ui",
            "meta": {
                "label": "UmbNav (Sorter)",
                "icon": "icon-sitemap",
                "group": "pickers",
                "propertyEditorSchemaAlias": "Umbraco.Plain.String",
                "settings": {
                    "properties": [
                        {
                            "alias": "enableTextItems",
                            "label": "Enable Text Items",
                            "description": "If enabled text items can be added to the navigation.",
                            "propertyEditorUiAlias": "Umb.PropertyEditorUi.Toggle"
                        }
                    ],
                    "defaultData": [
                        {
                            "alias": "enableTextItems",
                            "value": true
                        }
                    ]
                }
            }
        },
        {
            "type": "modal",
            "alias": "umbnav.text.item.modal",
            "name": "UmbNav (Text Item Modal)",
            "element": "/App_Plugins/UmbNavSorter/dist/client.js",
            "elementName": "umbnav-text-item-modal"
        }
    ]
}